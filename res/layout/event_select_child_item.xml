<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectall_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <View
        style="@style/Calendar_Display_Setting_Left_Vertical_Diviver"
        android:layout_marginBottom="-12dip"
        android:layout_marginTop="-12dip" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:src="@drawable/check1_off" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_event_item_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:textColor="@color/actionbar_menu_text"
                android:textSize="@dimen/month_view_event_item_title_text_size" />

            <ImageView
                android:id="@+id/img_event_item_typeImg"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_label"
                android:src="@drawable/calendar_list_icon_alarm" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="-5dip"
            android:textColor="@color/event_time_text_color"
            android:textSize="@dimen/month_view_event_item_time_text_size" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_select_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-10dip"
        android:button="@drawable/checkbox_button_selector"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

</LinearLayout>