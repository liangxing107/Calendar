<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_type_layout_width"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btn_view_type_year"
        style="@style/Btn_View_Type"
        android:text="@string/year_lable" />

    <TextView
        android:id="@+id/btn_view_type_month"
        style="@style/Btn_View_Type"
        android:text="@string/month_view" />

    <TextView
        android:id="@+id/btn_view_type_week"
        style="@style/Btn_View_Type"
        android:text="@string/week_view" />

    <TextView
        android:id="@+id/btn_view_type_day"
        style="@style/Btn_View_Type"
        android:text="@string/day_lable" />

    <TextView
        android:id="@+id/btn_view_type_agenda"
        style="@style/Btn_View_Type"
        android:text="@string/agenda_view" />

    <TextView
        android:id="@+id/btn_view_type_task"
        style="@style/Btn_View_Type"
        android:text="@string/task" />

</LinearLayout>