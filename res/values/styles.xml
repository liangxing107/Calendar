        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="Calendar_Display_Setting_TextView">
        <item name="android:layout_marginBottom">12dip</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Calendar_Display_Setting_Checkbox">

        <!-- <item name="android:background">@drawable/btn_checkbox_selector</item> -->
        <!-- <item name="android:background">@drawable/btn_selector_background_for_edit</item> -->
        <item name="android:layout_marginBottom">12dip</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Calendar_Display_Setting_Clicked_Row">
        <item name="android:background">@drawable/diaplay_settting_layout_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">7dip</item>
