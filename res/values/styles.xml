    </style>

    <style name="TextAppearance.EditEvent_Label_1" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:layout_marginLeft">@dimen/common_list_margin_left</item>
        <item name="android:textColor">@color/edit_event_label_text_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Month_Name_Text_Style" parent="@android:style/TextAppearance">
